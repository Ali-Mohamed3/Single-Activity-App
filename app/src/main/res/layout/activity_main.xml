<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/iv_android"
        android:src="@drawable/android_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        />

    <ImageView
        android:id="@+id/iv_google"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/google_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_description"
        android:textSize="24sp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/iv_google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_description"
        />
    <TextView
        android:drawablePadding="8dp"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        android:id="@+id/tv_address"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:drawableStart="@drawable/baseline_location_city_24"
        />
    <TextView
        android:drawablePadding="8dp"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_website"
        android:drawableStart="@drawable/address"
        android:text="@string/website"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>